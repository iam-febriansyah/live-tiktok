<script>
  var rowCount = 0;
  var baseUrl = '<%- baseurl %>';
  const sekarang = '<%-  sekarang %>';
  var listPhoneCode = [];
  var listDevices = [];

  window.addEventListener('load', async function() {
    await showLoading("Please wait...");
    await getDevices();
    await getPhoneCode();
    await select2General(listDevices, null, "device_id", null);
    await select2General(listPhoneCode, null, "phone_code", null);
    await dismisLoading();
  });

  async function getDevices() {
    var url = `${baseUrl}/getDevices`;
    var dataPost = {}
    var btnId = "";
    var datas = await ajaxPost(url, dataPost, btnId);
    datas.data.forEach(e => {
      if (e.status == 'true') {
        var data = {
          id: e.device_id,
          text: e.device_id + ' - ' + e.description,
          selected: ''
        }
        listDevices.push(data);
      }
    });
  }

  async function getPhoneCode() {
    var url = `${baseUrl}/phoneCode`;
    var dataPost = {}
    var btnId = "";
    var datas = await ajaxPost(url, dataPost, btnId);
    datas.data.forEach(e => {
      var data = {
        id: e.dial_code,
        text: e.dial_code + " [" + e.code + "]",
        selected: ''
      }
      listPhoneCode.push(data);
    });
  }


  async function ajaxPostWIthList(url, dataPost, btnId) {
    return await Promise.resolve(
      $.ajax({
        url: url,
        type: "post",
        dataType: "json",
        data: JSON.stringify(dataPost),
        contentType: "application/json; charset=utf-8",
        beforeSend: function() {
          btnId.value = "Processing....";
          btnId.disabled = true;
        },
        success: (res) => {
          btnId.disabled = false;
          return res;
        },
        error: (XMLHttpRequest, textStatus, errorThrown) => {
          btnId.disabled = false;
          return false;
        },
      })
    );
  }

  async function submit() {
    var status = true;
    var device_id = $("#device_id").val();
    var phone_code = $("#phone_code").val();
    var number = $("#number").val();
    var file = $("#file").val();
    var message = $("#message").val();
    var type = 'text';

    if (device_id == '') {
      status = false;
      showSnackError("Please choose Device ID");
      return false
    }
    if (phone_code == '') {
      status = false;
      showSnackError("Please choose Phone Code");
      return false
    }
    if (number == '' || number.length < 6) {
      status = false;
      showSnackError("Please enter phone number, minimal 6 characters");
      return false
    }
    if (message == '' || message.length < 4) {
      status = false;
      showSnackError("Please enter message, minimal 4 characters");
      return false
    }

    if (file != '') {
      var splitFile = file.split(".");
      var ext = splitFile[splitFile.length - 1];
      if (ext == 'jpg' || ext == 'png' || ext == 'jpeg') {
        type = 'image';
      } else if (ext == 'pdf') {
        type = 'document';
      } else {
        status = false;
        showSnackError("Only .jpg .png .jpeg .pdf extentions");
        return false
      }
    }

    var dataPost = {
      device_id: device_id,
      number: phone_code + "" + number,
      message: message,
      file: file,
      type: type
    }

    if (status) {
      var url = `${baseUrl}/sendDirect`
      var btnId = "submit";
      await showLoading("Please wait...");
      var res = await ajaxPostWIthList(url, dataPost, btnId);
      await dismisLoading();
      if (!res) {
        showSnackError("Something wrong system");
      } else {
        if (res.status) {
          success(res.remarks)
        } else {
          showSnackError(res.remarks);
        }
      }
    }
  };
</script>
