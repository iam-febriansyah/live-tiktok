<script>
  var baseUrl = '<%- baseurl %>';

  function showPass() {
    var x = document.getElementById("password");
    if (x.type === "password") {
      x.type = "text";
    } else {
      x.type = "password";
    }
  }

  async function submit() {
    var status = true;
    var no_whatsapp = $("#no_whatsapp").val();
    var password = $("#password").val();

    if (no_whatsapp == '') {
      showSnackError("Please enter WhatsApp Number");
      return false
    }
    if (password == '') {
      showSnackError("Please enter Password");
      return false
    }
    if (status) {
      var dataPost = {
        no_whatsapp: no_whatsapp,
        password: password
      }
      var url = baseUrl;
      var btnId = "login";
      await showLoading("Please wait...");
      var res = await ajaxPost(url, dataPost, btnId);
      await dismisLoading();
      if (!res) {
        showSnackError("Something wrong system");
      } else {
        if (res.status) {
          showSnackSuccess(res.remarks)
          window.location.replace(`${baseUrl}/dashboard`);
        } else {
          showSnackError(res.remarks);
        }
      }
    }
  };
</script>