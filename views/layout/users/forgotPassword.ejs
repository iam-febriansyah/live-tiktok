<script>
    const url = window.location.href.split('/');
    const baseUrl = `${url[0]}//${url[2]}/${url[3]}/`;

    function forgot(){
        email = $('#email').val()
        if(!email){
            alert('Silahkan isi email anda terlebih dahulu')
        }else{
            $.ajax({
                url: baseUrl + 'forgotSendMail',
                type: 'POST',
                dataType: 'JSON',
                data:{
                    email
                },success: function(res){
                    if(res.message){
                        Swal.fire(
                            '',
                            res.remarks,
                            'success'
                        ).then((result)=>{
                        if (result.isConfirmed) {
                            location.reload()
                            }
                        })
                    }else{
                        Swal.fire(
                            '',
                            res.remarks,
                            'error'
                        )
                    }
                }
            })
        }
    }

</script>